<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
 
    <% if(user) {%> 
      <div> 
         <form class = "form-inline" action="/logout" method="POST" style ="position: absolute; right:0" >
           <h5>Logged in as:<%= user.email %> </h5>
         <button type="submit" class="btn btn-outline-dark">Logout</button>
       </form>
     </div>
     <% } else { %>

    <form class = "form-inline" method="POST" name ="LoginForm" action = "/login" style ="position: absolute; right:0" >
      <div class="form-group mb-2">
        <label for="username">Username:</label>
        <input 
          class="form-control"
          type="text"
          name="username"
          style="width: 300px; margin: 1em"
        />
      </div>
      <button class = "btn btn-outline-dark"  type = "submit"> Login  </button>
    </form>
    <% } %>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
  </nav>
</header>